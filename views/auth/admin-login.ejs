<%- include('../partials/header') %>

<section class="row g-4 align-items-start">
  <div class="col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="h3 fw-bold">Hyrje Administrator</h1>
        <p class="text-muted">Identifikohuni per te menaxhuar kerkesat, raportet dhe perdoruesit.</p>

        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/auth/admin" method="POST" class="row g-3">
          <div class="col-12">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" id="email" name="email" type="email" required />
          </div>
          <div class="col-12">
            <label class="form-label" for="password">Fjalekalimi</label>
            <input class="form-control" id="password" name="password" type="password" required />
          </div>
          <div class="col-12">
            <button class="btn btn-danger" type="submit">Hyr</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card shadow-sm bg-light border-0">
      <div class="card-body">
        <h3 class="h5">Roli i administratorit</h3>
        <ul class="mt-3">
          <li>Krijon, perditeson dhe mbyll kerkesat.</li>
          <li>Shikon raportet dhe statuset.</li>
          <li>Menaxhon perdoruesit dhe njoftimet.</li>
        </ul>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
